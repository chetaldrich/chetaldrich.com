.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#banner"}
        %img{:alt => "website banner", :src => "images/calogo.png"}/
    .navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          %a{:href => "/"} Home
        %li
          %a{:href => "blog"} Articles

.jumbotron
  %h1.articlestitle
    Articles

- if paginate && num_pages > 1
  %p
    Page #{page_number} of #{num_pages}
  - if prev_page
    %p= link_to 'Previous page', prev_page
.entries
  .container
    - page_articles.each_with_index do |article, i|
      .entry
        %h2
          = link_to article.title, article
        %span Chet Aldrich &middot;
        %span= article.date.strftime('%b %e %Y')
        %span= truncate_words(article.body, :length => 25)
        %hr
- if paginate
  - if next_page
    %p= link_to 'Next page', next_page
