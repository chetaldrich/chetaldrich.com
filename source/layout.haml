!!!
%html
  %head
    // Basic Meta Data
    %title
      Chet Aldrich#{' - ' + current_article.title unless current_article.nil?}
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    %meta{:content => "Chet Aldrich is an Iowa based web developer,\r\n    graphic designer and software engineer currently studying at Carleton College.", :name => "description"}
    %meta{:content => "INDEX, FOLLOW", :name => "ROBOTS"}
    // Mobile Specific Metas
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    // JS
    = javascript_include_tag 'main'
    // CSS
    = stylesheet_link_tag 'styles'
    // Favicon
  %body
    #main{:role => "main"}
      = yield
